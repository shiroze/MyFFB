@model IEnumerable<MyAttd.Models.T_PPN>

@if (ViewBag.Message != null)
{
    <h1 class="@ViewBag.MessageCSS">@ViewBag.MessageType</h1>
    <p class="@ViewBag.MessageCSS">@ViewBag.Message</p>
}
else
{

    <table class="table table-bordered table-responsive table-hover" style="white-space:nowrap" id="cssTableUtama">
        <thead class="table-primary" style="position:sticky; top:0;">
            <tr>
                <th>Actions</th>
                <th>
                    @Html.DisplayNameFor(model => model.Periode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.no_faktur_pajak)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ppn_type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tgl_faktur_pajak)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tgl_posting)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sap_company_code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sap_vendor_code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.periode_awal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.periode_akhir)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.disetorke)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ppn_penyelesaian)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.no_faktur_pajak_advance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CashNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.amount_cash_advance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.total_amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.incentive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ppn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FCCreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FCCreatedDT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FCUpdatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FCUpdatedDT)
                </th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <button class="btn btn-info" title="View" onclick="viewIconClick('@item.no_faktur_pajak','@item.ppn_type')"><i class="fa fa-book"></i></button>
                    <button class="btn btn-danger" title="Delete" onclick="deleteIconClick('@item.no_faktur_pajak','@item.ppn_type')"><i class="fa fa-trash"></i></button>
                    @*@if (item.ppn_type!="A")
            {*@
                    @*<button class="btn btn-info" title="Print" onclick="printIconClick('@item.sap_company_code','@item.sap_vendor_code','@item.periode_awal','@item.periode_akhir')"><i class="fa fa-print"></i></button>*@
                    <button class="btn btn-info" title="Print" onclick="printIconClick('@item.no_faktur_pajak')"><i class="fa fa-print"></i></button>
                    @*}*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Periode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.no_faktur_pajak)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ppn_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tgl_faktur_pajak)
                </td>
                <td>
                    @if (item.tgl_posting.ToString() != ("1/1/0001 12:00:00 AM"))
                    {
                        @Html.DisplayFor(modelItem => item.tgl_posting)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sap_company_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sap_vendor_code)
                </td>
                <td>
                    @if (item.periode_awal.ToString() != ("1/1/0001 12:00:00 AM"))
                    {
                        @Html.DisplayFor(modelItem => item.periode_awal)
                    }
                <td>
                    @if (item.periode_akhir.ToString() != ("1/1/0001 12:00:00 AM"))
                    {
                        @Html.DisplayFor(modelItem => item.periode_akhir)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.disetorke)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ppn_penyelesaian)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.no_faktur_pajak_advance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amount_cash_advance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.total_amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.incentive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ppn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy.FCName)
                </td>
                <td>
                    @if (item.FCCreatedDT.ToString() != ("1/1/0001 12:00:00 AM"))
                    {
                        @Html.DisplayFor(modelItem => item.FCCreatedDT)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateBy.FCName)
                </td>
                <td>
                    @if (item.FCUpdatedDT.ToString() != ("1/1/0001 12:00:00 AM"))
                    {
                        @Html.DisplayFor(modelItem => item.FCUpdatedDT)
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
}
<script>
    $(document).ready(function () {
        $('#cssTableUtama').DataTable({
            columnDefs: [{
                targets: [0],
                orderData: [0, 1]
            }, {
                targets: [1],
                orderData: [1, 0]
            }, {
                targets: [4],
                orderData: [4, 0]
            }]
        });
    });
</script>

                            <td>@Html.TextBoxFor(m => m.KomidelPlus1, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control" })</td>
                            <td>@Html.TextBoxFor(m => m.HargaPlus1, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control" })</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="dx-field center col-md-12">
                <button id="button"
                        text="UnApprove"
                        class="btn btn-danger"
                        usesubmitbehavior="true">
                    <h4>UnApprove</h4>
                </button>
            </div>

        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
        <script>
                        document.getElementById('KomidelMinCopy').value = document.getElementById('KomidelMin').value
                        document.getElementById('KomidelMin2Copy').value = document.getElementById('KomidelMin2').value
                        document.getElementById('KomidelMin1Copy').value = document.getElementById('KomidelMin1').value
        </script>
    }
}
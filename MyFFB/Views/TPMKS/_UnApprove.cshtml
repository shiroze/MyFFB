            </div>
            <div class="dx-field center col-md-8">
                <table id="tbl01" border="1">
                    <thead>
                        <tr bgcolor=#52BE80><td colspan="5"><b><i>Category Agent Local, Own Estate dan Agent Ramp</i></b></td></tr>
                        <tr align="center" bgcolor=#5DADE2>
                            <td colspan="2">Buah Kecil</td>
                            <td colspan="3">Buah Sedang</td>
                        </tr>
                        <tr align="center" bgcolor=#5DADE2>
                            <td>Komidel &lt;</td>
                            <td style="color:red">Harga -</td>
                            <td>Komidel &lt;</td>
                            <td>Komidel &gt;</td>
                            <td style="color:red">Harga -</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.TextBoxFor(m => m.KomidelMin, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control", @id = "KomidelMin" })</td>
                            <td>@Html.TextBoxFor(m => m.HargaMin, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control" })</td>
                            <td><input type="number" step="1" class="form-control" id="KomidelMinCopy" readonly></td>
                            <td>@Html.TextBoxFor(m => m.KomidelPlus, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control" })</td>
                            <td>@Html.TextBoxFor(m => m.HargaPlus, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control" })</td>
                        </tr>
                    </tbody>
                </table>

                <table id="tbl01" border="1">
                    <thead>
                        <tr bgcolor=#52BE80><td colspan="5"><b>Bibit Topaz</b></td></tr>
                        <tr align="center" bgcolor=#5DADE2>
                            <td colspan="2">Buah Kecil</td>
                            <td colspan="3">Buah Sedang</td>
                        </tr>
                        <tr align="center" bgcolor=#5DADE2>
                            <td>Komidel &lt;</td>
                            <td style="color:red">Harga -</td>
                            <td>Komidel &lt;</td>
                            <td>Komidel &gt;</td>
                            <td style="color:red">Harga -</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.TextBoxFor(m => m.KomidelMin2, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control", @id = "KomidelMin2" })</td>
                            <td>@Html.TextBoxFor(m => m.HargaMin2, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control" })</td>
                            <td><input type="number" step="1" class="form-control" id="KomidelMin2Copy" readonly></td>
                            <td>@Html.TextBoxFor(m => m.KomidelPlus2, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control" })</td>
                            <td>@Html.TextBoxFor(m => m.HargaPlus2, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control" })</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="dx-field center col-md-4">
                @Html.CheckBoxFor(m => m.Approval, new { @onclick = "return false" })
                @Html.LabelFor(m => m.Approval)
            </div>
            <div class="dx-field center col-md-4">
                @Html.CheckBoxFor(m => m.PaySaturday, new { @onclick = "return false" })
                @Html.LabelFor(m => m.PaySaturday)
            </div>

            @*<div class="dx-field center col-md-8">

                </div>*@

            <div class="dx-field center col-md-8">
                <table id="tbl01" border="1">
                    <thead>
                        <tr bgcolor=#52BE80><td colspan="5"><b>Category CVS</b></td></tr>
                        <tr align="center" bgcolor=#5DADE2>
                            <td colspan="2">Buah Kecil</td>
                            <td colspan="3">Buah Sedang</td>
                        </tr>
                        <tr align="center" bgcolor=#5DADE2>
                            <td>Komidel &lt;</td>
                            <td style="color:red">Harga -</td>
                            <td>Komidel &lt;</td>
                            <td>Komidel &gt;</td>
                            <td style="color:red">Harga -</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.TextBoxFor(m => m.KomidelMin1, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control", @id = "KomidelMin1" })</td>
                            <td>@Html.TextBoxFor(m => m.HargaMin1, new { @readonly = "readonly", @type = "number", @step = "1", @class = "form-control" })</td>

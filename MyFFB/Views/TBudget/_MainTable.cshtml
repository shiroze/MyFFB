@model IEnumerable<MyAttd.Models.T_Budget>

@if (ViewBag.Message != null)
{
    <h1 class="@ViewBag.MessageCSS">@ViewBag.MessageType</h1>
    <p class="@ViewBag.MessageCSS">@ViewBag.Message</p>
}
else
{

    <table class="table table-bordered table-responsive table-hover" style="white-space:nowrap" id="cssTableUtama">
        <thead class="table-primary" style="position:sticky; top:0;">
            <tr>
                <th>Actions</th>
                <th>
                    @Html.DisplayNameFor(model => model.Periode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PMKSID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VolumeFFB_KG)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VolumeCPO_KG)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VolumePK_KG)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OER)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KER)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NetMargin_USD_MT_CPO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HK)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExchangeRate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capacity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProduksiCangkang_KG)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BakarCangkang_KG)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EBITDA_Cangkang)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProduksiBA_KG)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price_BunchAsh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FCCreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FCCreatedDT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FCUpdatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FCUpdatedDT)
                </th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <button class="btn btn-info" title="View" onclick="viewIconClick('@item.Periode','@item.PMKSID')"><i class="fa fa-file-text"></i></button>
                    <button class="btn btn-success" title="Edit" onclick="editIconClick('@item.Periode','@item.PMKSID')"><i class="fa fa-edit"></i></button>
                    <button class="btn btn-danger" title="Delete" onclick="deleteIconClick('@item.Periode','@item.PMKSID')"><i class="fa fa-trash"></i></button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Periode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PMKSID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolumeFFB_KG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolumeCPO_KG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolumePK_KG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OER)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KER)
                </td>
                <td>
                    @if (item.NetMargin_USD_MT_CPO != 0)
                    {
                        @Html.DisplayFor(modelItem => item.NetMargin_USD_MT_CPO)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HK)
                </td>
                <td>
                    @if (item.ExchangeRate != 0)
                    {
                        @Html.DisplayFor(modelItem => item.ExchangeRate)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProduksiCangkang_KG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BakarCangkang_KG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EBITDA_Cangkang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProduksiBA_KG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price_BunchAsh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy.FCName)
                </td>
                <td>
                    @if (item.FCCreatedDT.ToString() != ("1/1/0001 12:00:00 AM"))
                    {
                        @Html.DisplayFor(modelItem => item.FCCreatedDT)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateBy.FCName)
                </td>
                <td>
                    @if (item.FCUpdatedDT.ToString() != ("1/1/0001 12:00:00 AM"))
                    {
                        @Html.DisplayFor(modelItem => item.FCUpdatedDT)
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
}
<script>
    $(document).ready(function () {
        $('#cssTableUtama').DataTable({
            columnDefs: [{
                targets: [0],
                orderData: [0, 1]
            }, {
                targets: [1],
                orderData: [1, 0]
            }, {
                targets: [4],
                orderData: [4, 0]
            }]
        });
    });
</script>
